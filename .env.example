# Rust Teams Configuration
# Copy this file to .env and update the values

# Server Configuration
HOST=127.0.0.1
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rust_teams
DATABASE_MAX_CONNECTIONS=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL_SECS=30
WS_CLIENT_TIMEOUT_SECS=60

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Logging
RUST_LOG=info,rust_teams_backend=debug

# Optional: External Services

# Email Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@example.com

# Redis Configuration (for caching/sessions)
# REDIS_URL=redis://127.0.0.1:6379

# S3 Configuration (for file storage)
# S3_BUCKET=rust-teams-files
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# WebRTC Configuration (for video calls)
# TURN_SERVER=turn:turn.example.com:3478
# TURN_USERNAME=turnuser
# TURN_PASSWORD=turnpassword
# STUN_SERVER=stun:stun.l.google.com:19302
